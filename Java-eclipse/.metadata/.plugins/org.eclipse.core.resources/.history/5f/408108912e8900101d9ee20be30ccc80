//　二つの変数xとyの合計と平均を表示

public class SamAve1 {

	public static void main(String[] args) {
		// 変数の宣言
		int x;
		int y;
		
		// 変数に値を代入
		x = 63;
		y = 18;
		
		// xとyの値を表示
		System.out.println("xの値は" + x + "です。");
		System.out.println("yの値は" + y + "です。");
		
		// xとyの合計を表示
		System.out.println("合計は" + (x + y) + "です。");
		// xとyの平均を表示
		System.out.println("平均は" + (x + y) / 2 + "です。");
	}

}
